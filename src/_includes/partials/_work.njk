<section>
  <h3 class="font-header font-semibold text-xl uppercase mb-6">Work</h3>
  <div class="pb-8">
    <div class="work flex flex-col relative">
      {% for item in work %}
        {% if item.isCurrent === true %}
          {% set current = "current" %}
        {% else %}
          {% set current = "" %}
        {% endif %}
        <div class="work-entry relative w-1/2 py-4 {{ current }}"><span
            class="dot-bg w-14 h-14 transform absolute bg-line inline-flex rounded-full items-center justify-center"><span
              class="dot w-5 h-5 bg-back-light rounded-full"></span></span>
          <h4 class="subpixel-antialiased"><a href="{{ item.link }}" target="_blank" rel="noopener noreferrer"
              class="link transition-colors duration-150 font-medium">{{ item.companyName }}</a></h4>
          <h5 class="text-sm font-normal mb-1">{{ item.title }}</h5><span class="text-sm font-medium opacity-75">{{ item.time }}</span>
        </div>
      {% endfor %}
    </div>
  </div>
</section>